{
  "@schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "addtionalProperties": false,
  "properties": {
    "display": {
      "type": "string",
      "default": "00:00"
    },
    "state": {
      "type": "string",
      "enum": ["running", "paused", "ended"],
      "default": "paused"
    }
  },
  "required": [ "display", "state" ]
}
